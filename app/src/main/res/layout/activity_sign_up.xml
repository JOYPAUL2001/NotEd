<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUP"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Create Account"
            android:textColor="@color/teal_200"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up with your new account"
            android:textColor="@color/teal_200"
            android:layout_marginBottom="25dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/etNameSignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ed_text_view"
            android:ems="10"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="#9C434242"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />
        <EditText
            android:id="@+id/etMailSignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ed_text_view"
            android:ems="10"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="#9C434242"
            android:paddingLeft="10dp"
            android:hint="E-mail"
            android:paddingRight="10dp"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etPassSignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ed_text_view"
            android:ems="10"
            android:drawableRight="@drawable/baseline_visibility_off_24"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableTint="@color/black"
            android:textColor="@color/black"
            android:textColorHint="#9C434242"
            android:textSize="20sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/bt_signup_SignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bt_view"
            android:text="Create account"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Already have an account?"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <Button
                android:id="@+id/bt_signin_SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#03F4F1F1"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="#FF9800"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>